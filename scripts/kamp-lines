#!/bin/sh
#
# jump to line in buffer
#
# requires:
# - fzf (https://github.com/junegunn/fzf)

set -euf

# fail early if there is no session or client
kamp ctx -c >/dev/null

kamp cat |
    nl -ba -s' â”‚ ' |
    fzf --no-preview --prompt 'lines> ' |
    awk '{print $1}' |
    xargs -r -I {} kamp send execute-keys '<esc>{}g'
